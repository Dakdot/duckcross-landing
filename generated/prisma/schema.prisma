generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  //   provider = "postgres"
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Email {
  email                String   @unique
  subscribedAt         DateTime
  createdAt            DateTime @default(now())
  privacyPolicyVersion String

  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  ipAddress String?
  userAgent String?
  referrer  String?
  timezone  String?
  language  String?
}
